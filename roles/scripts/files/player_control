#!/usr/bin/env sh

ACTIONS="⏯️ Toggle Play/Pause
⏭️ Next Track
⏮️ Previous Track"

SELECTED_ACTION=$(echo "$ACTIONS" | rofi -dmenu -i -p "Spotify Control: ")

if [ -z "$SELECTED_ACTION" ]; then
    exit 0
fi

case "$SELECTED_ACTION" in
    "⏯️ Toggle Play/Pause")
        playerctl play-pause
        ;;
    "⏭️ Next Track")
        playerctl next
        ;;
    "⏮️ Previous Track")
        playerctl previous
        ;;
esac
