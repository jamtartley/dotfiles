fi

case "$SELECTED_ACTION" in
	"â¯ï¸ Toggle Play/Pause")
		spotify_player playback play-pause
		;;
	"â­ï¸ Next Track")
		spotify_player playback next
		;;
	"â®ï¸ Previous Track")
		spotify_player playback previous
		;;
	"ğŸ”€ Toggle Shuffle")
		spotify_player playback shuffle
		;;
esac
