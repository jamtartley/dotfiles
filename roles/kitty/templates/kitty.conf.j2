include                    diff.conf
include                    dracula.conf

kitty_mod                  super

font_family                Terminess Nerd Font Mono
inactive_text_alpha        0.1
active_border_color        #ff92df
inactive_border_color      #21222c

confirm_os_window_close    0

enable_audio_bell          no

enabled_layouts            tall,stack

dynamic_background_opacity yes

map super+enter            new_window_with_cwd
map super+w                close_window
map super+t                new_tab
map super+tab              next_tab
map super+shift+tab        previous_tab

{% if is_linux %}
font_size                  12
map super+space            next_layout
{% elif is_darwin %}
font_size                  16
map super+shift+space      next_layout
{% endif %}
